{
    "name": "@uppercod/normalize-indentation",
    "version": "1.0.0",
    "description": "Normalize start-of-line spaces by reducing values to eliminate additional indentation",
    "main": "cjs.js",
    "module": "esm.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "test": "ava",
        "prepare": "npm run build && npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/UpperCod/normalize-indentation.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/UpperCod/normalize-indentation/issues"
    },
    "homepage": "https://github.com/UpperCod/normalize-indentation#readme",
    "dependencies": {},
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^8.1.0",
        "ava": "^3.10.1",
        "builtin-modules": "^3.1.0",
        "esm": "^3.2.25",
        "rollup": "^2.21.0"
    },
    "typings": "types.d.ts",
    "ava": {
        "require": [
            "esm"
        ],
        "files": [
            "test/**/*.test.js"
        ]
    },
    "exports": {
        "import": "./esm.js",
        "require": "./cjs.js"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
